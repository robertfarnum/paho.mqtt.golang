    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Local Proxy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mqttproxy"
        },
        {
            "name": "Launch AWS Proxy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mqttproxy",
            "args": ["-v", "-ts", "127.0.0.1:1882", "-ws", "127.0.0.1:8443", "-server", "${input:aws_server}"]
        }
    ],
    "inputs": [
        {
            "id": "aws_server",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "aws_sign -profile saml -region us-east-1"
            }
        }
    ]
}